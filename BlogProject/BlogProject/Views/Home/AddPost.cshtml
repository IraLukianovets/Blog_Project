@using System.Web.UI.WebControls
@model BlogProject.Models.AddPostPageModel
    
@section Styles {
}

<div class="jumbotron">
    <form action="@Url.Action("AddPost", "Home")" method="POST">
        <div class="form-group">
            <label for="name">Your name:</label>
            @Html.TextBoxFor(model => model.Writer, new {type = "text", @class = "form-control", id = "name", placeholder = "Writer"})
            @Html.ValidationMessageFor(model => model.Writer)
        </div>
        <div class="form-group">
            <label for="title">Title:</label>
            @Html.TextBoxFor(model => model.Title, new {type = "text", @class = "form-control", id = "title", placeholder = "Title"})
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div class="form-group">
            <label for="description">Description:</label>
            @Html.TextAreaFor(model => model.Description, new {@class = "form-control", id = "description", rows = "3", placeholder = "Text"})
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="form-check">
            <label class="form-check-label">
                @Html.CheckBoxFor(model => model.IsPublished, new {@class = "form-check-input", type = "checkbox"})
                Is Published ?
            </label>
        </div>
        <button type="submit" class="btn btn-primary">Add</button>
    </form>
</div>

@section Scripts {
}
